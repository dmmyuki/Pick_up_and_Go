<div class="row">
  <h2 class="m-5">管理者ログイン</h2>
</div>

<div class="row">
  <%= form_with model: @admin, url: admin_session_path do |f| %>
  <div class="bg-success col-xs-4 col-xs-offset-4">
    <table class="table table-borderless">
      <tr>
        <th><%= f.label :email, "メールアドレス" %></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <th><%= f.label :password, "パスワード" %></th>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      </tr>
      <tr>
        <th></th>
        <td>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "入力情報を保存する" %>
        <% end %>
        </td>
      </tr>
    </table>

    <div class="text-center">
      <%= f.submit "ログイン" %>
    </div>
  </div>
  <% end %>

  <%= render "admin/shared/links" %>
</div>
