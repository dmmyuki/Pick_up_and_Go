<h2 class="m-3"><%= @user.fullname %>さんの登録情報編集</h2>

<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <% form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
      <table class="table">
        <tr>
          <th>会員ID</th>
          <td><%= @user.id %></td>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %>&ensp;<%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= f.text_field :nickname %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :phone_number %></td>
        </tr>
      </table>

      <div class="text-center">
        <%= f.submit "変更を保存", class:"btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>
