<h2 class="m-3">会員一覧</h2>

<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <table class="table">
      <thead>
          <tr class="bg-light">
            <th scope="col">会員ID</th>
            <th scope="col">氏名</th>
            <th scope="col">メールアドレス</th>
            <th scope="col">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.fullname, admin_user_path(user) %></td>
              <td><%= user.email %></td>
              <td>
                <% if user.suspended? == true %>
    	            <p class="text-danger">退会</p>
				        <% else %>
				          <p class="text-success">有効</p>
				        <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>
