<div class="row justify-content-center">
  <div class="col-sm-10">
    <h2 class="m-3">
      <i class="fas fa-tag"></i> <%= @tag.name %>  の投稿一覧
    </h2>

    <div class="card-deck">
    <% @places.each do |place| %>
      <div class="col-sm-4">
        <div class="card mb-2">
          <%= image_tag place.get_image, class:"card-img-top", width:"100%", height:"180px" %>
          <div class="card-body">
            <p class="card-text">
              <%= link_to admin_post_path(place.id) do %>
                <%= place.title.truncate(25) %>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>

  <div class="col-sm-2 text-truncate">
    <h3 class="m-3">
      <i class="fas fa-tags"></i>タグ一覧
    </h3>
    <table class="table m-3">
      <% @tag_list.each do |list|%>
      <tr>
        <td>
          <%= link_to list.name, admin_post_search_tag_path(@places, list) %>
          <%= "(#{list.posts.count})" %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
