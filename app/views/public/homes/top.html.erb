
<%= image_tag 'Top_image.jpg', width:'100%', height:'500px', class:"mt-3" %>

<div class="row">
  <div class="col-sm-6 mt-3">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">About</h5>
        <p class="card-text">Pick up! & Go! ってどんなサイト？簡単にですが紹介します！</p>
        <%= link_to about_path, class:"btn btn-outline-success" do %>
          Go! <i class="fas fa-running"></i>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-sm-6 mt-3">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title">ゲストログイン</h5>
        <p class="card-text">ゲストユーザーとして、このサイトのことを知ってみませんか？</p>
        <%= link_to "ゲストログイン", guest_sign_in_path, method: :post, class:"btn btn-outline-success" %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <h2 class="mt-5"><i class="fas fa-plus"></i> 新着スポット</h2>
    <div class="col-sm-12 mt-3">
      <div class="card-group">
        <% @places.each do |place| %>
          <div class="col-sm-3">
            <div class="card">
              <%= image_tag place.get_image, class:"card-img-top thumbnail-img" %>
              <div class="card-body">
                <h5 class="card-title text-truncate"><%= place.title %></h5>
                <p class="card-text text-right"><%= place.created_at.strftime('%Y/%m/%d') %></p>
                <%= link_to post_path(place.id), class:"btn btn-outline-primary" do %>
                  <i class="fas fa-crosshairs"></i> Pick up!
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
