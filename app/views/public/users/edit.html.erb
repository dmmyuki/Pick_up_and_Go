<div class="row">
  <h2 class="m-3">登録情報編集</h2>

  <div class="col-sm-10 offset-sm-1">
    <%= form_with model: @user, url: user_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>氏名</th>
          <td>
            <%= f.text_field :last_name %>
          </td>
          <td>
            <%= f.text_field :first_name %>
          </td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= f.text_field :nickname %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
      </table>

      <div class="text-center">
        <%= f.submit "変更を保存", class:"btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>
