<h2 class="m-3">
  <% if @user.nickname.present? %>
    <%= @user.nickname %>
  <% else %>
    <%= @user.last_name %> <%= @user.first_name %>
  <% end %>
  さんの投稿一覧
</h2>

<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <div class="card-deck">
    <% @places.each do |place| %>
      <div class="col-sm-4">
        <div class="card mb-2">
          <%= image_tag place.get_image, class:"card-img-top", width:"100%", height:"180px" %>
          <div class="card-body">
            <h5 class="card-title text-truncate"><%= place.title %></h5>
            <p class="card-text text-right"><%= place.created_at.strftime('%Y/%m/%d') %></p>
            <%= link_to post_path(place.id), class:"btn btn-outline-primary" do %>
              <i class="fa-solid fa-person-walking"></i>
              <span>Pick up!</span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
