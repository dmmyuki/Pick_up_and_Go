<p class="text-center text-info"><%= flash[:notice] %></p>

<div class="row">
  <h2 class="m-3">マイページ</h2>

  <div class="col-sm-10 offset-sm-1">
    <h5><i class="fas fa-pencil-alt"></i> 登録情報</h5>

    <table class="table">
      <tr>
        <th>氏名</th>
        <td><%= @user.last_name %> <%= @user.first_name %></td>
      </tr>
      <tr>
        <th>ニックネーム</th>
        <td><%= @user.nickname %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @user.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </table>

    <% if @user.email == 'guest@example.com' %>
      <br>
    <% else %>
      <p class="text-right"><%= link_to "編集", edit_user_path(@user), class:"btn btn-outline-secondary" %></p>
    <% end %>
  </div>

  <div class="col-sm-10 offset-sm-1">
    <h5><i class="fas fa-heart"></i> いいねしたスポット</h5>
    <% @favorite_places.each do |place|%>
    <table class="table">
      <tr>
        <th>タイトル</th>
        <td class="text-center"><%= place.title %></td>
        <td class="text-right">
          <%= link_to post_path(place.id), class:"btn btn-outline-primary" do %>
            <i class="fas fa-crosshairs"></i> Pick up!
          <% end %>
        </td>
      </tr>
    </table>
    <% end %>
  </div>

</div>
