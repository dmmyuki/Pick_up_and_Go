<div class="row">
  <h2>新規投稿</h2>

  <div>
    <%= form_with model: @post, url: posts_path, method: :post do |f| %>
      <table class="table table-borderless">
        <tr>
          <th><%= f.label :image, "画像" %></th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th><%= f.label :title, "タイトル" %></th>
          <td><%= f.text_field :title %></td>
        </tr>
        <tr>
          <th><%= f.label :body, "紹介文" %></th>
          <td><%= f.text_area :body %></td>
        </tr>
        <tr>
          <th><%= f.label :business_hour, "営業時間" %></th>
          <td><%= f.text_area :business_hour %></td>
        </tr>
        <tr>
          <th><%= f.label :price, "料金" %></th>
          <td><%= f.text_area :price %></td>
        </tr>
        <tr>
          <th><%= f.label :access, "アクセス方法" %></th>
          <td><%= f.text_area :access %></td>
        </tr>
      </table>

      <div>
        <%= f.submit "投稿" %>
      </div>
    <% end %>
  </div>
</div>
