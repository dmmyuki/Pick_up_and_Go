<div class="row">
  <h2 class="m-3">スポット新規投稿</h2>

  <div class="col-sm-8 offset-sm-2">
    <%= form_with model: @place, url: posts_path, method: :post do |f| %>
      <table class="table table-borderless">
        <tr>
          <th><%= f.label :image, "画像" %></th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <th><%= f.label :title, "タイトル" %></th>
          <td><%= f.text_field :title, class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :body, "紹介文" %></th>
          <td><%= f.text_area :body, class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :name, "タグ (,で区切ると複数タグ登録できます)" %></th>
          <td><%= f.text_field :name, value: @tag_list, class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :business_hour, "営業時間" %></th>
          <td><%= f.text_area :business_hour, class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :price, "料金" %></th>
          <td><%= f.text_area :price, class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :access, "アクセス方法" %></th>
          <td><%= f.text_area :access, class:"form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :address, "住所" %></th>
          <td><%= f.text_field :address, class:"form-control" %></td>
        </tr>
      </table>

      <div class="text-center">
        <%= f.submit "投稿", class:"btn btn-outline-primary" %>
      </div>
    <% end %>
  </div>
</div>
