<h2 class="m-3"><%= @tag.name %>の投稿一覧</h2>

<div class="row">
  <div>
    <!--タグリスト-->
    <% @tag_list.each do |list|%>
      <%=link_to list.name, post_search_tag_path(tag_id: list.id) %>
      <%= "(#{list.posts.count})" %>
    <% end %>
  </div>

  <div>
    <% @places.each do |place| %>
